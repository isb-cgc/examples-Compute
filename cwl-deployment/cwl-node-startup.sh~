#!/bin/bash

# Install pip
wget https://bootstrap.pypa.io/get-pip.py
python get-pip.py && rm get-pip.py

# Install CWL reference implementation
pip install cwl-runner

# Create the data directory used by the example
mkdir -p /cwl-data/workflows/snapr/inputs /cwl-data/workflows/snapr/outputs /cwl-data/workflows/bbt/inputs /cwl-data/workflows/bbt/outputs


